---
import TechnologyList from './common/TechnologyList.astro';

interface Props {
  company: string;
  title: string;
  technologies: string[];
  startYear: number;
  endYear?: number;
}

const { company, title, startYear, endYear, technologies } = Astro.props;
---
<div class="w-full">
  <div class="flex flex-row gap-2">
    <div>
      <h3 class="text-lg font-bold mb-2">{company}</h3>
      <p class="italic">{title}</p>
      <p class="italic">{startYear} - {endYear ?? 'Present'}</p>
      <div class="job-description mt-2">
        <slot />
      </div>
      <TechnologyList technologies={technologies} />
    </div>
  </div>
</div>
<style>
  ul {
    list-style-type: disc;
    list-style-position: inside;
  }
</style>