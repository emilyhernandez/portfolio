---
import { getImage } from "astro:assets";
import heroImg from "../../../public/assets/images/hero.jpg"
import ArrowIcon from "../../../public/arrow.svg"
const optimizedBackground = await getImage({src: heroImg, format: 'jpg'})
---
<div
  style={`background-image: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1)), url(${optimizedBackground.src});`}
  class="hero-container rounded-2xl p-6"
>
  <div class="flex flex-col h-full justify-center">
    <div class="hero-text flex flex-col gap-2 md:ml-6 lg:ml-12 text-white">
      <div class="relative flex flex-col gap-2 max-w-100 w-full">
        <h1 class="text-5xl title-font text-center sm:text-left">Emily Hernandez</h1>
        <p class="text-2xl text-center sm:text-left">Full-stack software engineer with a frontend background and growing backend focus.</p>

        <div class="hidden sm:block absolute left-1/2 -translate-x-1/2 top-full mt-6">
          <ArrowIcon id="arrow-icon" width={100} height={120} />
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .hero-container {
    background-size: cover;
    background-position: right center;
    background-repeat: no-repeat;
    background-overflow: hidden;
    flex: 1;
    min-height: 0;
    min-width: 0;
    width: 100%;
    overflow: hidden;
  }

  .hero-text {
    text-shadow: 0 2px 18px rgba(0, 0, 0, 0.65);
  }

  #arrow-icon {
    fill: white;
    rotate: 80deg;
  }
</style>