---
interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

{technologies.length > 0 && (
  <ul class="flex flex-row gap-2 flex-wrap">
    {technologies.map((technology) => (
      <li class="border border-gray-300 rounded-full px-3 py-1">{technology}</li>
    ))}
  </ul>
)}